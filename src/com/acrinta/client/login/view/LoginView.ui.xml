<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>

	</ui:style>
	<g:HTMLPanel>
		<g:Label text="Login, please:" styleName="w3-text-indigo" height="20px"/>
		<g:SimplePanel ui:field="message" height="20px"/>
		
		<table style="width: 10%">
			<tr>
				<td>Email</td>
				<td>
					<g:TextBox ui:field="email"></g:TextBox>
				</td>
			</tr>
			<tr>
				<td>Password</td>
				<td>
					<g:PasswordTextBox ui:field="password"></g:PasswordTextBox>
				</td>
			</tr>
			<tr>
				<td></td>
				<td>
					<g:Button ui:field="submit_button"></g:Button>
					<g:Anchor ui:field="register_link"></g:Anchor>
				</td>
			</tr>
		</table>
		<br/>
		<table style="width: 12.7%">
		<g:Label text="DO NOT FEED THE HORSES" styleName="w3-blue"/>
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 